              ansible_ssh_pass:    "${dbnodes[index(ips_dbnodes_admin, ip_dbnode_admin)].authentication.password}"
              ansible_become_pass: "${dbnodes[index(ips_dbnodes_admin, ip_dbnode_admin)].authentication.password}"
%{~ endif }
%{~ endfor }

